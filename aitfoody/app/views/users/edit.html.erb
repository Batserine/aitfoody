<p id="notice"><%= notice %></p>
<div class="container">
  <br><br>
  <center><h3>User Profile</h3></center>
  <%= form_for(@user, :url => { :action => "update_profile" }, :method => "post" ) do |f| %>
    <div class="row">
      <div class="col-sm-8 offset-md-2">
        <div class="form-group">
          <%= f.label :firstname, "Firstname" %><br />
          <%= f.text_field :firstname ,:placeholder => "First Name", :class =>"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :lastname, "Lastname" %><br />
          <%= f.text_field :lastname ,:placeholder => "Last Name", :class =>"form-control"%>
        </div>
        <div class="form-group">
          <% chk_male   = false
             chk_female = false
            if @user.sex == 'male'
              chk_male = true
            elsif @user.sex == 'female'
              chk_female = true
            end
          %>
          <%= f.label :sex, "Sex" %><br />
          <%= f.label :sex, "Male", :value => 'male'  %>
          <%= f.radio_button :sex, 'male' , :checked => chk_male %>
          <%= f.label :sex, "Female", :value => 'female' %>
          <%= f.radio_button :sex, 'female' , :checked => chk_female %>
        </div>
        <div class="action_container">
          <%= f.submit 'Update Profile', :class =>"btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>