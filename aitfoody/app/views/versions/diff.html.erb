<div class='row mt'>
  <div class='col-sm-12'>
    <h2><%= "Diff between Version #{@version.id} and Current Version" %></h2>
    <style><%= Diffy::CSS %></style>
    <div class='well diff'>
      <p>
        <strong>Ttile:</strong>
        <%= diff(@version.reify.title, @revarticle.title) %>
      </p>
      <p>
        <strong>Content:</strong>
        <%= diff(@version.reify.content, @revarticle.content) %>
      </p>
      <p>
        <strong>Rating:</strong>
        <%= diff(@version.reify.rating, @revarticle.rating) %>
      </p>
      <p>
        <strong>Price:</strong>
        <%= diff(@version.reify.price, @revarticle.price) %>
      </p>
      <p>
        <strong>Location:</strong>
        <%= diff(@version.reify.location, @revarticle.location) %>
      </p>
    </div>
    <p>
      <%= "Version authored by #{find_version_author_name(@version)} on #{@version.created_at} by '#{@version.event.humanize}'." %>
    </p>
  </div>
</div>
<div class='fr'>
  <%= link_to 'Back', edit_revarticle_path(@revarticle), class: 'btn btn-danger' %>
  <%= link_to 'Rollback', rollback_revarticle_version_path(@revarticle, @version), class: 'btn btn-primary', method: 'PATCH' %>
</div>